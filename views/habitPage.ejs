<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head'); -%>
    <!--google font link-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;500;600;700&family=Poppins:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <!--bootstrap-->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <!--custom css link-->
    <script
      src="https://kit.fontawesome.com/592efcffa0.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/style.css" />

    <!--custom css-->
    <link rel="stylesheet" href="/css/habits.css" />
  </head>

  <body>
    <header class="header"><%- include('partials/header'); -%></header>
    <div class="container card-container">
      <div class="container">
        <h4 class="text-center h3"><%= title.toUpperCase() %></h4>
        <br />
        <br />
        <h2 class="habith2 h3">HABITS</h2>
        <div class="habits content fluid-container">
          <% if (habits.length > 0) { %> <% habits.forEach(habit => { %>
          <div class="habit-container mb-5">
            <h3 class="habit-title" habitid="<%= habit._id %>">
              <%= habit.habitName %>
            </h3>
            <div class="row text-left">
              <div class="col-3">
                <p class="snippet">
                  Reps: <%= habit.habitReps %>/<%=habit.habitMaxReps%>
                  <button class="minusButton" id="<%= habit._id %>">
                    <i class="fa-solid fa-minus minus-icon"></i>
                  </button>
                  <button class="addButton" id="<%= habit._id %>">
                    
                    <i class="fa-solid fa-plus add-icon"></i>
                  </button>
                </p>
              </div>

              <% if (habit.habitComplete) {%>
              <div class="col-2 justify-content-left">
                <p class="text-success">Complete:</p>
              </div>
              <div class="col-1">
                <ion-icon
                  class="h4"
                  class="text-success text-center"
                  name="checkbox-outline"
                ></ion-icon>
              </div>
              <% } else { %>
              <div class="col-2">
                <p class="text-danger">Complete:</p>
              </div>
              <div class="col-1">
                <ion-icon class="h4" name="close-circle-outline"></ion-icon>
              </div>
              <% }%>
              <div class="col-3">Streak: <%=habit.habitStreak %></div>
              <div class="col-3">
                <button id="<%= habit._id %>" class="deleteButton">
                  <i class="fa-solid fa-x delete-icon h4"></i>
                </button>
              </div>
            </div>
          </div>
          <% }) %> <% } else { %>
          <p>There are no habits to display</p>
          <% } %>
        </div>
        <br />
        <form class="add-habit">
          <input
            class="habit"
            type="text"
            name="habitName"
            id="habitName"
            placeholder="Enter Habit Name"
            required
          />
          <input
            type="number"
            name="habitMaxReps"
            id="habitMaxReps"
            placeholder="# of Repetitions"
            min="1"
            required
          />
          <input type="submit" value="+ Add Habit" />
        </form>

        <ul class="habits"></ul>
      </div>
      <div></div>
    </div>
    <script defer src="/js/habits.js"></script>

    <!--ionicon link-->
    <script
      type="module"
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"
    ></script>

    <%- include ('partials/footer.ejs'); -%>
  </body>
</html>
