<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head'); -%>
    <script src="https://kit.fontawesome.com/592efcffa0.js" crossorigin="anonymous"></script>

        <!--google font link-->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link
            href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;500;600;700&family=Poppins:wght@400;500;700&display=swap"
            rel="stylesheet">
        <!--bootstrap-->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
        <!--custom css link-->

        <link rel="stylesheet" href="/css/style.css">

        <!--custom css-->
        <link rel="stylesheet" href="/css/habits.css">
</head>

<body>
    <header class="header">
        <%- include('partials/header'); -%>
    </header>
    <div class="container card-container">
        <div class="container">
           
            <h2><%= user.username.charAt(0).toUpperCase() + user.username.slice(1) %>'s Games</h2>
            <div class="habits content">
                <% if (games.length > 0) { %> 
                    <% games.forEach(game => { %>
                    <a href= "/games/<%= game.gameId %>"><h3 class="habit-title text-center" id=<%= game.gameId %>><%= game.gameName %></h3></a>
                    <% }) %>
                    <%  %>
                 <% } else { %>
                    <p class="text-center">There are no games to display, add a game below now!</p>
                    <% } %>
            </div> 
            <br>
        </div>
        <div class="d-flex justify-content-center text-center">
        <button id="addNewGame" class="btn btn-primary text-center"  onclick="toggleGameDiv()">Add new game!</button>
    </div>
        <div class="game-cards" id="gameDiv" style="display: none">
        <h1 class="h2 habit-header">SELECT YOUR GAME!</h1>
        <div class="container" id="searchDiv">
            <div class="row height d-flex justify-content-center align-items-center">
                <div class="col-md-6">
                    <div class="form"> 
                        <i class="fa fa-search"></i> 
                        <form>
                        <input type="text" class="form-control form-input" id="gameInput" placeholder="Search for a game..." required> <span class="left-pan">
                            <button class="btn" id="searchBtn"style="background-color: none;">Search</button></span>
                        
                        </div>
                        <div class="results" id="resultDiv">
                            
                        </div>
                        <button type="submit" class="btn btn-primary">Add selected game</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            
            <div class="col-md-4">
                <div class="column">
                    <div class="card text-center">
                        <img class="card-img-top" src="/images/apex-login.jpg" alt="Card image" style="width:100%">
                        <div class="card-body">
                            <h4 class="card-title">APEX LEGENDS</h4>
                            <p class="card-text">Need to become a more disciplined APEX player? <br> Create your habit
                                now!
                            </p>
                            <a href="" class="btn">View habits</a> <!--Click this, make post request to server to -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="column">
                    <div class="card text-center">
                        <img class="card-img-top" src="/images/fortnite.jpeg" alt="Card image">
                        <div class="card-body">
                            <h4 class="card-title">FORTNITE</h4>
                            <p class="card-text">Need to become a more disciplined FORTNITE player? <br> Create your
                                habit
                                now!
                            </p>
                            <a href="#" class="btn">View habits</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="column">
                    <div class="card text-center">
                        <img class="card-img-top" src="/images/cs-go.jpeg" alt="Card image" style="width:100%">
                        <div class="card-body">
                            <h4 class="card-title">CS: GO</h4>
                            <p class="card-text">Need to become a more disciplined CS:GO player? <br> Create your habit
                                now!
                            </p>
                            <a href="#" class="btn">View habits</a>
                        </div>
                    </div>
                </div>
            </div>
          
        </div>
       
    </div>
  
    </div>
    <!-- <script defer src="/js/habits.js"></script> -->
    <!--Custom JS-->
    <script defer src="js/layout/games.js"></script>
    <!--ionicon link-->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <%- include ('partials/footer.ejs'); -%>
</body>

</html>
